create table vendedores(
ID_VENDEDOR INT NOT NULL,
NOME_VENDEDOR VARCHAR(255) NOT NULL,
PRIMARY KEY (ID_VENDEDOR)
);
insert into vendedores
values(1,'Paula Rabelo'),
(2,'Juliana Macedo'),
